---
import MaterialUI from "./icons/MaterialUI.astro";
import NextJS from "./icons/NextJS.astro";
// import Tailwind from "./icons/Tailwind.astro";

const TAGS = {
  NEXT: {
    name: "Next.js",
    class: "bg-black text-white",
    icon: NextJS,
  },
  MATERIALUI: {
    name: "Material UI",
    class: "bg-black text-white",
    icon: MaterialUI,
  },
};
const PROJECTS = [
  {
    title: "Tienda Online - Clone de la tienda de Tesla",
    description:
      "He desarrollado un clone de la tienda de Tesla con didacticos, cuenta con funciones de carrito de compras, pago con paypal, panel administrativo, entre otras",
    link: "https://nexjs-tienda-online-app.vercel.app/",
    github: "https://github.com/jrfullstack/nexjs-tienda-online-app",
    image: "/projects/tesloshop.webp",
    tags: [TAGS.NEXT, TAGS.MATERIALUI],
  },
];
---

{
  PROJECTS.map(({ image, title, description, tags }) => (
    <article>
      <h3 class="text-2xl font-semibold text-yellow-800 dark:text-yellow-200 mb-2">
        {title}
      </h3>
      <p class="text-lg mb-4 text-pretty">{description}</p>
      <ul class="flex gap-x-2 flex-row mb-2">
        {tags.map((tag) => (
          <li>
            <span
              class={`flex gap-x-2 rounded-full text-xs ${tag.class} py-1 px-2 border border-white/10`}>
              <tag.icon class="size-4" />
              {tag.name}
            </span>
          </li>
        ))}
      </ul>
      <img
        loading="lazy"
        class="rounded shadow-2xl shadow-white/10 aspect-video"
        src={image}
        alt={`Captura de pantalla del proyecto ${image}`}
      />
    </article>    
  ))
}
